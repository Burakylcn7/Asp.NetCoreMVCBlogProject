

<div class="tech-btm">
    <h4>Haber bültenimize kaydolun</h4>
    <p> </p>
    <form action="/NewsLetter/PartialSubscribeMail/" method="post">
        <input type="email" id="txtMail" placeholder="Email" required="" name="Mail">
        <input type="submit" id="subbtn" value="Abone Ol">
    </form>
</div>

<script type="text/javascript">
    $("#subbtn").click(function () {
        let values = {
            Mail: $("#txtMail").val()
        };
        $.ajax({
            type: "post",
            url: "/NewsLetter/PartialSubscribeMail/",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
                alert("Kaydınız Alındı");
            }
        });
    });
</script>
