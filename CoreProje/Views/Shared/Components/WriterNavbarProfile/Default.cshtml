@model IEnumerable<EntityLayer.Concrete.Writer>

<li class="nav-item nav-profile">
    @foreach (var item in Model)
    {
        <a href="/Writer/Index/" class="nav-link">
            <div class="nav-profile-image">
                <img src="@item.WriterImage" alt="profile">
                <span class="login-status online"></span>
                <!--change to offline or busy as needed-->
            </div>
            <div class="nav-profile-text d-flex flex-column">
                <span class="font-weight-bold mb-2">@item.WriterName</span>
                <span class="text-secondary text-small">@ViewBag.username</span>
            </div>
            <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
        </a>
    }
</li>