@model IEnumerable<EntityLayer.Concrete.Message>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    <div class="dropdown-divider"></div>
    @foreach (var item in Model)
    {
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="@item.SenderWriter.WriterImage" alt="image" class="profile-pic">
                @*<div class="preview-icon bg-warning">
                    <i class="mdi mdi-bell-ring menu-icon"></i>
                </div>*@
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderWriter.WriterName sana mesaj gönderdi</h6>
                <p class="text-gray mb-0">@item.MessageDate.ToShortDateString()</p>
            </div>
        </a>
    }
    <a href="/Message/InBox/"> <h6 class="p-3 mb-0 text-center">Gelen Kutusu</h6></a>
</div>