@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>Kullanıcı</th>
        <th>Rol Ata</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.NameSurname</td>
            <td><a href="/Admin/AdminRol/AssignRole/@item.Id/" class="btn btn-warning" >Rol Ata</a></td>
        </tr>
    }
</table>
<a href="/Admin/AdminRol/Index/" class="btn btn-outline-dark">Rol Listesine Dön</a>

