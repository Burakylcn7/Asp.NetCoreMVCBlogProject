@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Güncelle</h1>

@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
{
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName  , new{@class="form-control" , @placeholder = "" })
    @Html.ValidationMessageFor(x => x.CategoryName, "" , new{@class="text-danger"})
    <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextAreaFor(x => x.CategoryDescription , 5,3 , new{@class="form-control" , @placeholder = ""})
    @Html.ValidationMessageFor(x => x.CategoryDescription , "" , new{@class="text-danger"})
    <br />
    @Html.Label("Kategori Statüsü")
    @Html.TextBoxFor(x => x.CategoryStatus  , new{@class="form-control" , disabled = "disabled" , @placeholder = "" })
    <br />

    <div class="btn-group float-right">
        <button class="btn btn-primary">Güncelle</button>
        <a href="/Admin/Category/Index/" class="btn btn-dark" style="Margin-left:10px;">Geri</a>
    </div>
}
